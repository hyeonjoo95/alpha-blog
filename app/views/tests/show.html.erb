<h2 align="center">Title: <%= @test.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center"><strong>Description</strong></h4>
  <hr>
  <%= simple_format(@test.description) %>
  <div class="article-actions">
    <%= link_to 'Edit', edit_test_path(@test), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this article", article_path(@test), method: :delete, data: { confirm: "Are you sure want 
    to delete the article?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to 'Back', tests_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
    
